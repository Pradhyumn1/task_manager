{
  "info": {
    "name": "To-Do List API",
    "description": "Complete API collection for To-Do List application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000"
    },
    {
      "key": "authToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"johndoe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"securepass123\",\n    \"password2\": \"securepass123\",\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register", ""]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"johndoe\",\n    \"password\": \"securepass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login", ""]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile", ""]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"first_name\": \"John\",\n    \"last_name\": \"Smith\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile", ""]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "List All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ""]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Complete Django Tutorial\",\n    \"description\": \"Build a To-Do List API with Django REST Framework\",\n    \"completed\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ""]
            }
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/1/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "1", ""]
            }
          }
        },
        {
          "name": "Update Task (PUT)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Complete Django Tutorial\",\n    \"description\": \"Finished building the To-Do API!\",\n    \"completed\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks/1/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "1", ""]
            }
          }
        },
        {
          "name": "Partial Update Task (PATCH)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"completed\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks/1/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "1", ""]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/1/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "1", ""]
            }
          }
        },
        {
          "name": "Filter Completed Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/?completed=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ""],
              "query": [
                {
                  "key": "completed",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Incomplete Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/?completed=false",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ""],
              "query": [
                {
                  "key": "completed",
                  "value": "false"
                }
              ]
            }
          }
        },
        {
          "name": "Search Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/?search=django",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ""],
              "query": [
                {
                  "key": "search",
                  "value": "django"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
